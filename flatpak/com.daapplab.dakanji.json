{
  "app-id": "com.daapplab.dakanji",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "dakanji",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=pulseaudio",
    "--share=network"
  ],
  "modules": [
    {
      "name": "dakanji",
      "buildsystem": "simple",
      "only-arches": [
        "x86_64"
      ],
      "build-commands": [
        "mkdir -p dakanji",
        "tar -xf dakanji.tar.gz -C dakanji",
        "cp -r dakanji /app/",
        "chmod +x /app/dakanji/dakanji",
        "mkdir -p /app/bin",
        "ln -s /app/dakanji /app/bin",

        "mkdir -p /app/share/metainfo",
        "cp -r com.daapplab.dakanji.metainfo.xml /app/share/metainfo/",

        "mkdir -p /app/share/icons/hicolor/scalable/apps",
        "cp -r app_icon_512.png /app/share/icons/hicolor/scalable/apps/com.daapplab.dakanji.png",

        "mkdir -p /app/share/applications",
        "cp -r com.daapplab.dakanji.desktop /app/share/applications/",

        "mkdir -p /app/share/appdata",
        "cp -r com.daapplab.dakanji.metainfo.xml /app/share/appdata/"

      ],
      
      "sources": [
        {
          "type": "file",
          "path": "dakanji.tar.gz"
        },
        {
          "type": "file",
          "path": "com.daapplab.dakanji.metainfo.xml"
        },
        {
          "type": "file",
          "path": "com.daapplab.dakanji.desktop"
        },
        {
          "type": "file",
          "path": "macos/Runner/Assets.xcassets/AppIcon.appiconset/app_icon_512.png"
        }
      ]
    }
  ]
}